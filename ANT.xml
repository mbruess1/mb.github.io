<project default="create_run_jar" name="Create Runnable Jar for Project MyTextAdventure">
    <!--this file was created by Eclipse Runnable JAR Export Wizard-->
    <!--ANT 1.7 is required                                        -->
    <!--define folder properties-->
    <property name="dir.buildfile" value="."/>
    <property name="dir.workspace" value="/Users/melaniebruessel/workspace"/>
    <property name="dir.jarfile" value="${dir.buildfile}"/>
    <target name="create_run_jar">
        <jar destfile="${dir.jarfile}/MyTextAdventure.jar" filesetmanifest="mergewithoutmain">
            <manifest>
                <attribute name="Main-Class" value="spinfo.textadventure.TextAdventure"/>
